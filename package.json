{
  "name": "doxigia",
  "displayName": "Doxigia",
  "description": "Comment code in a doxygen way",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.doxigia",
        "title": "DOXIGIA"
      },
      {
        "command": "code-summarizer-doxygen",
        "title": "Generate Doxygen comments"
      }, 
      {
        "command": "inLineComments-comments",
        "title": "Generate inLine comments"
      }, 
      {
        "command": "code-headers",
        "title": "Generate header comments"
      },
      {
        "command": "code-explanation",
        "title": "Explain and comments this portion of code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "code-summarizer-doxygen",
          "group": "9_cutcopypaste"
        },
        {
          "when": "editorHasSelection",
          "command": "inLineComments-comments",
          "group": "9_cutcopypaste"
        },
        {
          "when": "editorHasSelection",
          "command": "code-headers",
          "group": "9_cutcopypaste"
        },
        {
          "when": "editorHasSelection",
          "command": "code-explanation",
          "group": "9_cutcopypaste"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.4.0"
  }
}
